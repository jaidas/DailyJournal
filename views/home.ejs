<%- include("Partials/header") -%>

<h1 id="select">Hello</h1>
<p id="select"><%= startingContent %></p>

<div id="select">
  <% posts.forEach (function (post) { %>
  <h1><%= post.title %></h1>
  <p>
    <%= post.content.substring(0, 100) + "..." %>
    <a href="posts/ <%= post.title %>">Read more</a>
  </p>
  <% }) %>
</div>
<button id="select" class="btn btn-sm" onclick="navigateToPage()">
  Click here to compose a post
</button>

<script>
  function navigateToPage() {
    window.location = "/compose";
  }
</script>
<%-include("Partials/footer") -%>
